<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="396.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.webfront.uvtool.controller.ProgramController">
   <children>
      <TextField fx:id="txtPackage" layoutX="14.0" layoutY="61.0" prefHeight="26.0" prefWidth="568.0" promptText="Package" />
      <VBox layoutX="14.0" layoutY="100.0" prefHeight="281.0" prefWidth="568.0" spacing="10.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="230.0">
               <children>
                  <Label text="Local Files" />
                  <Label text="Remote Files" />
               </children>
            </HBox>
            <HBox prefHeight="319.0" prefWidth="568.0" spacing="10.0">
               <children>
                  <TextArea fx:id="txtLocalFiles" prefHeight="253.0" prefWidth="287.0" />
                  <TextArea fx:id="txtRemoteFiles" prefHeight="253.0" prefWidth="282.0" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onBtnDelete" prefHeight="26.0" prefWidth="70.0" text="Delete" />
                  <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Cancel" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onBtnSave" prefHeight="26.0" prefWidth="70.0" text="Save" />
               </children>
            </HBox>
         </children>
      </VBox>
      <ComboBox fx:id="cbAppSelector" layoutX="14.0" layoutY="14.0" onAction="#onAppSelect" prefHeight="26.0" prefWidth="568.0" promptText="Select application" />
   </children>
</AnchorPane>
